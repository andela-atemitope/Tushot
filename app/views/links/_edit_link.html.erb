<div class="edit_link">
  <h6>Edit Link</h6>

  
  <%= form_for (@link_details) do |f| %>

    <%= f.label :long_url, "Long Url" %>
  <div class="row">
    <div class="col l8">
    
      <%= f.text_field :long_url, class: 'center' %> 
    </div>
    <div class="col l4">
      <%= f.text_field :short_url %>
    </div>
  </div>
  <div class="row controls">
    <div class="col l3 offset-l1">
      <%= f.radio_button :active, true, id: "true" %>
      <%= f.label :active, "Active", for: "true", class: 'active-text' %>
      <%= f.radio_button :active,  false, id: "false" %>
      <%= f.label :active, "Inactive", for: "false", class: 'inactive-text' %>
    </div>
    <div class="col l4">
      <%= f.submit "Update", class: "btn btn-info" %>
    </div>
    <div class="col l4">
    <%= link_to "Delete", "/links/#{@link_details.id}", class: "btn btn-info red" , method: "delete" %>
    </div>
    </div>
  <% end %>
</div>


