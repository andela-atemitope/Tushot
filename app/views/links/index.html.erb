<div class="bg">

<div id="over">

  <div id="flash">
    <%= render partial: 'flash' %>
  </div>
 
  <div class="intro container">
    <h1 class="grey-text text-lighten-5"> ...and it became tushot! </h1>
    <div class="index_form col l6 off l6">
      <%= render 'form' %>
      </div>
      <div class="col s3">
         <div class="shortlink" id="shortlinks">  </div>
        
      </div>
    </div>

  </div>
 </div>

<div class="container about">
  <h3><%= @count %></h3>
  <h6> victims and counting</h6>
  <hr>
  <div class="row">
    <div class="col l6">
      <h6>Recent</h6>
      <div class="stats card blue-grey darken-1">
        <div class="card-content white-text recent-left">
           <table>
        <thead>
          <tr>
              <th data-field="id">Old Url</th>
              <th data-field="name">New Url</th>
              <th data-field="price">Clicks</th>
          </tr>
        </thead>

        <tbody>
        <% @most_recent_links.each do |f| %>

          <tr>
            <td><%= link_to "#{ truncate f.long_url, length: 18}", f.long_url %></td>
            <td><%= link_to "#{truncate "#{root_url}#{f.short_url}", length: 30 }", f.short_url %></td>
            <td><%= f.clicks %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
   </div>

    <div class="col l6 right">
      <h6>Most Popular</h6>
      <div class="stats card blue-grey darken-1">
        <div class="card-content white-text popular-right">
           <table>
        <thead>
          <tr>
              <th data-field="id">Old Url</th>
              <th data-field="name">New Url</th>
              <th data-field="price">Clicks</th>
          </tr>
        </thead>

        <tbody>
          <% @most_popular_links.each do |f| %>
          <tr>
            <td><%= link_to "#{truncate f.long_url, length: 18}", f.long_url %></td>
            <td><%= link_to "#{truncate "#{root_url}#{f.short_url}", length: 30 }", f.short_url %></td>
            <td><%= f.clicks %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>
</div>
</div>

