<div class="container about details">
  <div class="row">
    <div class="col l12">
      <h6>YOUR DETAILS EXIST HERE</h6>
       <hr>
        <div class="stats card blue-grey darken-1 recent-left">
          <div class="card-content white-text">
            <table>
              <thead>
                <tr>
                  <th data-field="id">Old Url</th>
                  <th data-field="name">New Url</th>
                  <th data-field="price">Clicks</th>
                  <th data-field="price">Location</th>
                  <th data-field="price">Referrer</th>
                  <th data-field="price">Browser</th>
                </tr>
              </thead>
        
              <tbody>
                <tr>
                  <td><%= "#{truncate "#{@link_details.long_url}", length: 75 }" %></td>
                  <td><%= @link_details.short_url %></td>
                  <td><%= @link_details.clicks %></td>
                  <% if @link_details.details != [] %>
                    <% @location.each do |location| %>
                      <td><%= location.location %> <%= location.count %></td>
                    <% end %>
                    <% @refferer.each do |refferer| %>
                      <td><%= refferer.refferer %> <%= refferer.count %></td>
                    <% end %>
                     <% @browser.each do |browser| %>
                      <td><%= browser.browser %> <%= browser.count %></td>
                    <% end %>
                  <% end %>
                </tr>

              </tbody>
            </table>

          </div>
        </div>
    </div>
    <div class="back-button">
  <%= link_to "Back to Dashboard", dashboard_path , class: "waves-effect waves-light btn-large" %>
</div>
  </div>
</div>