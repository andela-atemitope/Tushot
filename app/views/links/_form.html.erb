<div class="url-form">
<b>Paste your long URL here:</b>
<%= form_for(@link, remote: true) do |f| %>
    <div class="input-group">
      <%= f.url_field :long_url, class:'form-control', placeholder: '         Paste Url Here', required: true  %>
      <div class="input-group-btn">
        <button class='btn btn-info cut'>cut</button>
      </div>
    </div>
    <small>All cut.ng URLs and click analytics are public and can be accessed by anyone.</small>
<% end %>
</div>



