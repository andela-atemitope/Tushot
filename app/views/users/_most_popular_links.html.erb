<table>
  <thead>
    <tr>
      
      <th data-field="new-url">New Url</th>
      <th data-field="clicks">Clicks</th>
      <th data-field="clicks"></th>
    </tr>
  </thead>
  <tbody>
  
    <% @popular_links.each do |f| %>
      <tr>
        <td><%= link_to "#{truncate "#{root_url}#{f.short_url}", length: 26 }", "/#{f.short_url}" , :target => "_blank", :title => "#{root_url}#{f.short_url}" %></td>
        <td><%= f.clicks %></td>
        <td><%= link_to "details", "/dashboard/#{f.short_url}", class: "waves-effect waves-light btn" %></td>
      </tr> 
    <% end %>
  </tbody>
</table>
<%= paginate @popular_links, param_name: :popular_links, :remote => true %>
